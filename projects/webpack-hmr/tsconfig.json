{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".eslintrc.js",
    "server",
    "typings.d.ts",
    "./src/**/*"
  ],
}